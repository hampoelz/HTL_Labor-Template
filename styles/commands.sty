% ---------- section title page ----------
\newcommand{\bigsection}[2][]{
    \def\hrulefill{\leavevmode\leaders\hrule height 0.5ex depth \dimexpr -0.5ex+0.4pt \hfill\kern 0pt}
    \clearpage\null
    \par\refstepcounter{section}
    \addcontentsline{toc}{section}{\protect\numberline{\thesection}#2}
    \if\relax\detokenize{#1}\relax\else\label{#1}\fi
    \null\vfill\vspace{-2em}
    \begin{center}%
        \Huge%
        \textbf{\thesection}%
        \\\vspace{0.5ex}%
        \hrulefill\\%
        \textbf{#2}%
        \\\hrulefill%
    \end{center}
    \vfill\break
    \clearpage
}

% --------- center title and toc ---------
\newcommand{\maketitletoc}{               % ┝ make title, include toc and center vertically with a slight offset
    \null\nointerlineskip\vfill           % |
    \let\snewpage\newpage                 % |
    \let\newpage\relax                    % |
    \maketitle                            % |
    \vspace{2em}                          % | add some space between title and toc
    \tableofcontents                      % |
    \vspace{0.1\textheight}               % | add offset
    \let\newpage\snewpage                 % |
    \vfill\break                          % |
}                                         % |

